{
  "manifest_version": 3,
  "name": "Pomodoro Extension",
  "description": "A Pomodoro timer extension to help you stay focused",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background_color": "#ffffff"
}
