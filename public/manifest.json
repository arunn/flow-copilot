{
  "manifest_version": 3,
  "name": "FlowCoPilot",
  "description": "Your intelligent companion for focused work sessions. Seamlessly manage your work-break cycles with this smart Pomodoro timer.",
  "version": "1.2.0",
  "permissions": ["storage", "alarms", "offscreen"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    },
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
